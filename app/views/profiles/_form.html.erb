<%= simple_form_for [current_user, profile] do |f| %>
<%= f.error_notification %>

<div class="form-inputs">
  <%= f.input :name %>
  <%= f.input :birthday %>
  <%= f.input :phone %>
  <%= f.input :location %>
  <%= f.input :bio %>
  <%= f.input :photo %>
  <%= f.input :photo_cache, as: :hidden %>
</div>

<div class="form-actions">
  <%= f.button :submit %>
</div>
<% end %>
