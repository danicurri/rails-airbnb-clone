<h1>Flats</h1>

<div class="container">
  <div class="row">
    <div class="col-xs-12 col-sm-6 col-sm-offset-3 col-md-offset-4 col-md-4 text-center">
      <p><%= link_to "create a flat", new_flat_path(@flat), class: "btn btn-primary"%></p>
    </div>
  </div>
</div>

<div class="container">
  <div class="row">

      <% @flats.each do |flat| %>
        <div class="col-xs-12 col-sm-6 col-md-4">
          <%= link_to flat_path(flat) do %>
          <div class="card" style="background-color: lightgrey;">
            <div class="card-category"><%=  flat.price%> </div>
            <div class="card-description">
              <h2> <%=  flat.title%></h2>
              <p> <%= flat.description %></p>
            </div>
          </div>
          <% end %>
        </div>
      <% end %>

  </div>
</div>




