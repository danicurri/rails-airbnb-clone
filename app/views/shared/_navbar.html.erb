<div class="navbar-wagon">
  <!-- Logo -->
  <a href="/" class="navbar-wagon-brand">
    <%= image_tag "logo.png", id: "logo" %>
  </a>

  <!-- Right Navigation -->
  <div class="navbar-wagon-right hidden-xs hidden-sm">
    <%= link_to "Flats" , flats_path, { :class=>"navbar-wagon-item navbar-wagon-link" } %>
    <%= link_to "Host" , new_flat_path, { :class=>"navbar-wagon-item navbar-wagon-link" } %>
    <%= link_to "Bookings" , my_bookings_path, { :class=>"navbar-wagon-item navbar-wagon-link" } %>
    <%= link_to "Messages" , new_flat_path,  { :class=>"navbar-wagon-item navbar-wagon-link" }%>


    <% if !current_user %>
      <%= link_to 'Login', new_user_session_path, class: "btn-login navbar-wagon-link navbar-wagon-item" %>
      <%= link_to 'Sign Up', new_user_registration_path, class: "btn-login navbar-wagon-link navbar-wagon-item" %>
    <% end %>

    <!-- Profile picture with dropdown list -->
    <div class="navbar-wagon-item">
      <div class="dropdown">
        <%= render 'shared/navatar' %>
        <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
          <li>
            <% if current_user %>
              <%= link_to 'Profile', user_profile_path(id: current_user.profile.id, user_id: current_user.id) %>
            <% end %>
            </a>
          </li>
          <li><%= link_to "Dashboard" , dashboard_index_path %></li>
          <%= render 'shared/sign_in_out' %>
        </ul>
      </div>
    </div>
  </div>

  <!-- Dropdown appearing on mobile only -->
  <div class="navbar-wagon-item hidden-md hidden-lg">
    <div class="dropdown">
      <i class="fa fa-bars dropdown-toggle" data-toggle="dropdown"></i>
      <ul class="dropdown-menu dropdown-menu-right navbar-wagon-dropdown-menu">
        <li><%= link_to "Host" , new_flat_path, { :class=>"navbar-wagon-item navbar-wagon-link" } %></li>
        <li><%= link_to "Bookings" , my_bookings_path, { :class=>"navbar-wagon-item navbar-wagon-link" } %></li>
        <li><%= link_to "Messages" , new_flat_path,  { :class=>"navbar-wagon-item navbar-wagon-link" }%></li>
      </ul>
    </div>
  </div>
</div>
